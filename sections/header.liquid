{%- style -%}
  .header__icon {
    position: relative;
  }

  /* Counter badge style */
  .icon-badge {
    position: absolute;
    top: -4px;
    right: -6px;
    background-color: red;
    color: white;
    font-size: 10px;
    padding: 2px 5px;
    border-radius: 50%;
    font-weight: bold;
    line-height: 1;
  }
{%- endstyle -%}

<header class="header">
  <div class="header__inner">
    <div class="header__left">
      <a href="{{ routes.root_url }}" class="header__heading-link link link--text focus-inset">
        <span class="header__heading-logo-wrapper">
          {%- if settings.logo != blank -%}
            <img
              src="{{ settings.logo | img_url: '300x' }}"
              class="header__heading-logo"
              alt="{{ settings.logo.alt | default: shop.name | escape }}"
              width="{{ settings.logo.width }}"
              height="{{ settings.logo.height }}"
            >
          {%- else -%}
            <span class="h2">{{ shop.name }}</span>
          {%- endif -%}
        </span>
      </a>
    </div>

    <div class="header__center">
      <nav class="header__inline-menu">
        <ul class="list-menu list-menu--inline" role="list">
          {% for link in linklists['main-menu'].links %}
            <li>
              <a href="{{ link.url }}" class="header__menu-item link link--text focus-inset">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    </div>

    <div class="header__right">
      <!-- Search Icon -->
      <a href="/search" class="header__icon header__icon--search link focus-inset">
        <span style="width: 16px;" class="svg-wrapper">{{ 'search.svg' | inline_asset_content }}</span>
        <span class="visually-hidden">{{ 'general.search.search' | t }}</span>
      </a>

      <!-- Wishlist Icon with counter -->
      <a href="/pages/wishlist" class="header__icon header__icon--account link focus-inset" rel="nofollow">
        <span style="width: 16px;" class="svg-wrapper">{{ 'heart.svg' | inline_asset_content }}</span>
        <span class="icon-badge" id="wishlist-count">0</span>
        <!-- Wishlist count badge -->
        <span class="visually-hidden">
          {%- liquid
            if customer
              echo 'customer.account_fallback' | t
            else
              echo 'customer.log_in' | t
            endif
          -%}
        </span>
      </a>

      <!-- Cart Icon with counter -->
      <a href="{{ routes.cart_url }}" class="header__icon header__icon--account link focus-inset" id="cart-icon-bubble">
        <span style="width: 16px;" class="svg-wrapper">{{ 'cart2.0.svg' | inline_asset_content }}</span>
        <span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
        {%- if cart != empty -%}
          <div class="icon-badge">
            {%- if cart.item_count < 100 -%}
              <span aria-hidden="true">{{ cart.item_count }}</span>
            {%- endif -%}
            <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
          </div>
        {%- endif -%}
      </a>
    </div>
  </div>
</header>

<!-- Optional: Update wishlist count from localStorage -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    var wishlist = JSON.parse(localStorage.getItem('wishlist')) || [];
    var count = wishlist.length;
    var badge = document.getElementById('wishlist-count');
    if (badge) {
      badge.textContent = count;
    }
  });
</script>
