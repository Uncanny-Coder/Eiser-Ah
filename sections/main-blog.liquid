{% style %}
  .blog-area {
    padding: 80px 0;
  }

  .main_title h2 {
    text-align: center;
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 10px;
  }

  .main_title p {
    text-align: center;
    color: #7a7a7a;
    margin-bottom: 40px;
  }

  .single-blog {
    margin-bottom: 30px;
    background: #fff;
  }

  .single-blog .thumb img {
    width: 100%;
    height: auto;
    display: block;
  }

  .short_details {
    padding: 20px 0;
  }

  .meta-top {
    font-size: 14px;
    color: #7a7a7a;
    margin-bottom: 10px;
  }

  .meta-top a {
    margin-right: 15px;
    color: #7a7a7a;
    text-decoration: none;
  }

  .single-blog h4 {
    font-size: 18px;
    font-weight: 600;
    color: #111;
    margin-bottom: 10px;
    transition: color 0.3s ease;
  }

  .single-blog h4:hover {
    color: #4CAF50;
    /* Green hover */
  }

  .text-wrap p {
    font-size: 14px;
    color: #555;
    margin-bottom: 15px;
  }

  .blog_btn {
    font-weight: 600;
    font-size: 14px;
    color: #111;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .blog_btn:hover {
    color: #4CAF50;
  }

{% endstyle %}

