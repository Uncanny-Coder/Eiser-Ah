    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        {
          "type": "link_list",
          "settings": {
            "heading": "Top Products"
          }
        },
        {
          "type": "link_list",
          "settings": {
            "heading": "Quick Links"
          }
        },
        {
          "type": "link_list",
          "settings": {
            "heading": "Features"
          }
        },
        {
          "type": "link_list",
          "settings": {
