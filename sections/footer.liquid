{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    background-color: #222;
    color: #fff;
    padding: 60px 0 20px;
    font-family: Arial, sans-serif;
  }

  .footer-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
  }

  .footer-column {
    flex: 1;
    min-width: 200px;
    margin-bottom: 30px;
    padding: 0 15px;
  }

  .footer-column.newsletter {
    flex: 1.5;
  }

  .footer h4 {
    color: #fff;
    margin-bottom: 20px;
    font-size: 18px;
    font-weight: bold;
    text-transform: uppercase;
  }

  .footer ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer ul li {
    margin-bottom: 10px;
    line-height: 1.5;
  }

  .footer a {
    color: #fff;
    opacity: 0.8;
    text-decoration: none;
    transition: opacity 0.3s;
  }

  .footer a:hover {
    opacity: 1;
  }

  .newsletter-content {
    margin-bottom: 15px;
    opacity: 0.8;
    line-height: 1.5;
  }

  .footer-bottom {
    border-top: 1px solid rgba(255,255,255,0.1);
    padding-top: 20px;
    margin-top: 40px;
    text-align: center;
    font-size: 14px;
    opacity: 0.7;
  }

  .footer-form {
    display: flex;
    margin-top: 20px;
  }

  .footer-input {
    flex: 1;
    padding: 10px 15px;
    border: none;
    font-size: 14px;
  }

  .footer-button {
    background: #f42f2c;
    color: white;
    border: none;
    padding: 0 20px;
    cursor: pointer;
    font-size: 14px;
  }

  @media (max-width: 768px) {
    .footer-column {
      flex: 100%;
    }
  }
{%- endstyle -%}

<footer class="footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="footer-container">
    {%- for block in section.blocks -%}
      <div class="footer-column">
        {%- if block.settings.heading != blank -%}
          <h4>{{ block.settings.heading }}</h4>
        {%- endif -%}

        {%- case block.type -%}
          {%- when 'link_list' -%}
            {%- if block.settings.menu != blank -%}
              <ul>
                {%- for link in block.settings.menu.links -%}
                  <li>
                    <a href="{{ link.url }}">
                      {{ link.title | escape }}
                    </a>
                  </li>
                {%- endfor -%}
              </ul>
            {%- endif -%}
        {%- endcase -%}
      </div>
    {%- endfor -%}

    <div class="footer-column newsletter">
      {%- if section.settings.newsletter_enable -%}
        <h4>{{ section.settings.newsletter_heading }}</h4>
        <p class="newsletter-content">{{ section.settings.newsletter_description }}</p>
        {%- form 'customer', id: 'ContactFooter', class: 'footer-form' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <input
            class="footer-input"
            name="contact[email]"
            placeholder="{{ 'newsletter.label' | t }}"
            required
            type="email"
          >
          <button class="footer-button" type="submit">{{ 'newsletter.button_label' | t }}</button>
        {%- endform -%}
        <p class="newsletter-content" style="margin-top: 20px;">{{ section.settings.company_address }}</p>
      {%- endif -%}
    </div>
  </div>

  <div class="footer-bottom">
    <p>
      Copyright &copy; {{ 'now' | date: '%Y' }} All rights reserved | This template is made with
      <span style="color: #f42f2c;">â™¥</span> by {{ section.settings.company_name }}
    </p>
  </div>
</footer>

