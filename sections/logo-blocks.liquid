<section class="logo-blocks py-5">
  <div class="container">
    <div class="row text-center">
      {% for block in section.blocks %}
        <div class="col-md-3 col-sm-6">
          <div class="card border-0 shadow-sm p-4">
            {% if block.settings.icon != blank %}
              <img
                src="{{ block.settings.icon | img_url: '100x100' }}"
                alt="{{ block.settings.title }}"
                class="mb-3 mx-auto d-block"
                style="width: 50px;"
              >
            {% endif %}
            <h5 class="fw-bold">{{ block.settings.title }}</h5>
            <p class="text-muted">{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Logo Blocks",
  "settings": [],
  "blocks": [
    {
      "type": "icon_block",
      "name": "Icon Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Short description here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo Blocks",
