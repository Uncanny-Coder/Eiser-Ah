{% schema %}
  {
    "name": "Logo Blocks",
    "settings": [],
    "blocks": [
      {
        "type": "block",
        "name": "Feature",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Money Back Guarantee"
          }, {
            "type": "text",
            "id": "description",
            "label": "Description",
            "default": "Shall open divide a one"
          }, {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Logo Blocks",
        "category": "Custom",
        "blocks": [
          {
            "type": "block"
          }, {
            "type": "block"
          }, {
            "type": "block"
          }, {
            "type": "block"
          }
        ]
      }
    ]
  }
{% endschema %}

<div class="container">
  <div class="row">
    {% for block in section.blocks %}
      <div class="col-md-3 text-center">
        <div class="card border-0 shadow-sm p-3">
          {% if block.settings.icon %}
            <img
              src="{{ block.settings.icon | img_url: '100x100' }}"
              alt="{{ block.settings.title }}"
              class="mb-2">
          {% endif %}
          <h5 class="fw-bold">{{ block.settings.title }}</h5>
          <p class="text-muted">{{ block.settings.description }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% stylesheet %}
  <style > .card {
    border-radius: 10px;
    transition: transform 0.3s ease-in-out;
  }
  .card:hover {
    transform: scale(1.05);
  }
  </style>
{% endstylesheet %}