<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flaticon@latest/css/flaticon.css">


<div class="logo-blocks">
  {% for block in section.blocks %}
    <div class="logo-block">
      {% if block.settings.icon_class != blank %}
        <i class="{{ block.settings.icon_class }}"></i>
      {% endif %}
      <h3>{{ block.settings.title }}</h3>
      <p>{{ block.settings.description }}</p>
    </div>
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Logo Blocks",
    "settings": [],
    "blocks": [
      {
        "type": "icon",
        "name": "Icon Block",
        "settings": [
          {
            "type": "text",
            "id": "icon_class",
            "label": "Icon Class",
            "default": "flaticon-money"
          }, {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Money Back Guarantee"
          }, {
            "type": "text",
            "id": "description",
            "label": "Description",
            "default": "Shall open divide a one"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Logo Blocks",
        "blocks": [
          {
            "type": "icon",
            "settings": {
              "icon_class": "flaticon-money"
            }
          }, {
            "type": "icon",
            "settings": {
              "icon_class": "flaticon-truck"
            }
          }, {
            "type": "icon",
            "settings": {
              "icon_class": "flaticon-support"
            }
          }, {
            "type": "icon",
            "settings": {
              "icon_class": "flaticon-blockchain"
            }
          }
        ]
      }
    ]
  }
{% endschema %}


{% stylesheet %}
  .logo-blocks {
    display: flex;
    justify-content: space-between;
    gap: 20px;
    padding: 30px 0;
  }

  .logo-block {
    text-align: center;
    width: 100%;
    max-width: 250px;
    background: #fff;
    border: 1px solid #ddd;
    padding: 20px;
    border-radius: 5px;
  }

  .logo-block i {
    font-size: 40px;
    color: #000;
    margin-bottom: 10px;
    display: block;
  }

  .logo-block h3 {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 5px;
    text-transform: uppercase;
  }

  .logo-block p {
    font-size: 14px;
    color: #666;
  }

{% endstylesheet %}