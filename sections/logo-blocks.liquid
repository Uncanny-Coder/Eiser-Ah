<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flaticon@latest/css/flaticon.css">

<div class="logo-blocks">
  {% for block in section.blocks %}
    <div class="logo-block">
      {% if block.settings.icon_class != blank %}
        <i class="{{ block.settings.icon_class }}"></i>
      {% endif %}
      <h3>{{ block.settings.title }}</h3>
      <p>{{ block.settings.description }}</p>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Logo Blocks",
  "settings": [],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon Block",
      "settings": [
        {
          "type": "text",
          "id": "icon_class",
          "label": "Icon Class",
          "default": "flaticon-money"
        }, {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Money Back Guarantee"
        }, {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Shall open divide a one"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo Blocks",
      "blocks": [
        {
          "type": "icon",
          "settings": {
            "icon_class": "flaticon-money"
          }
        }, {
          "type": "icon",
          "settings": {
            "icon_class": "flaticon-truck"
          }
        }, {
          "type": "icon",
          "settings": {
            "icon_class": "flaticon-support"
          }
        }, {
          "type": "icon",
          "settings": {
            "icon_class": "flaticon-blockchain"
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .logo-blocks {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    padding: 30px 0;
  }

  .logo-block {
    text-align: center;
    width: 100%;
    max-width: 250px;
    background: #fff;
    padding: 10px;
    border-radius: 5px;
  }

  .logo-block i {
    font-size: 25px;
    color: #000;
    margin-bottom: 20px;
    display: block;
  }

  .logo-block h3 {
    font-size: 16px;
    margin-bottom: 2px;
    text-transform: uppercase;
  }

  .logo-block p {
    font-size: 11px;
    color: #666;
  }

  @media screen and (max-width: 768px) {
    .logo-block {
      flex: 0 0 calc(50% - 20px);
      max-width: calc(50% - 20px);
    }

    .logo-block h3 {
      font-size: 14px;
    }

    .logo-block p {
      font-size: 10px;
    }

    .logo-block i {
      font-size: 22px;
    }
  }

  @media screen and (max-width: 480px) {
    .logo-block {
      flex: 0 0 100%;
      max-width: 100%;
    }
  }
{% endstylesheet %}
