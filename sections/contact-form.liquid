{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

<script>
    center: {
    lat: parseFloat({{ section.settings.map_latitude }}),
    lng: parseFloat({{ section.settings.map_longitude }})
  },
  zoom: parseInt({{ section.settings.map_zoom }})
</script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section
  id="{{ section.id }}"
  class="section {{ section.settings.color_scheme }}"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <{{ section.settings.heading_size }} class="title center">
        {{ section.settings.heading }}
      </{{ section.settings.heading_size }}>
    {% endif %}

    <div class="contact__container">
      <div class="contact__info">
        <div class="contact__info-item">
          <h3>{{ section.settings.address_heading }}</h3>
          <p>{{ section.settings.address_text }}</p>
        </div>
        <div class="contact__info-item">
          <h3>
            <a href="tel:{{ section.settings.phone_number | remove: ' ' }}">
              {{ section.settings.phone_number }}
            </a>
          </h3>
          <p>{{ section.settings.phone_availability }}</p>
        </div>
        <div class="contact__info-item">
          <h3>
            <a href="mailto:{{ section.settings.email }}">
              {{ section.settings.email }}
            </a>
          </h3>
          <p>{{ section.settings.email_note }}</p>
        </div>
      </div>

      <div class="contact__form">
        {% form 'contact' %}
          {% if form.posted_successfully? %}
            <p class="form-message form-message--success">Thanks for contacting us. We'll get back to you shortly.</p>
          {% endif %}

          {% if form.errors %}
            <div class="form-message form-message--error">
              <ul>
                {% for field in form.errors %}
                  <li>{{ form.errors.messages[field] }}</li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}

          <input type="text" name="contact[name]" placeholder="Your Name" required>
          <input type="email" name="contact[email]" placeholder="Your Email" required>
          <input type="tel" name="contact[phone]" placeholder="Your Phone (optional)">
          <textarea name="contact[body]" placeholder="Your Message" required></textarea>

          <button type="submit" class="button">Send Message</button>
        {% endform %}
      </div>
    </div>

    {% if section.settings.show_map %}
      <div class="contact__map">
        <iframe
          src="https://maps.google.com/maps?q={{ section.settings.map_latitude }},{{ section.settings.map_longitude }}&z={{ section.settings.map_zoom }}&output=embed"
          width="100%"
          height="450"
          frameborder="0"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
        >
        </iframe>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Contact Form",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Contact Us",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "H2" },
        { "value": "h1", "label": "H1" },
        { "value": "h0", "label": "H0" },
        { "value": "hxl", "label": "HXL" },
        { "value": "hxxl", "label": "HXXL" }
      ],
      "default": "h1",
      "label": "Heading Size"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Contact Info"
    },
    {
      "type": "text",
      "id": "address_heading",
      "label": "Address Heading",
      "default": "Address"
    },
    {
      "type": "textarea",
      "id": "address_text",
      "label": "Address Text",
      "default": "123 Main St, Anytown, USA"
    },
    {
      "type": "text",
      "id": "phone_number",
      "label": "Phone Number",
      "default": "+1 (123) 456-7890"
    },
    {
      "type": "text",
      "id": "phone_availability",
      "label": "Phone Availability",
      "default": "Mon–Fri, 9am–5pm"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "support@example.com"
    },
    {
      "type": "text",
      "id": "email_note",
      "label": "Email Note",
      "default": "We usually reply within 24 hours."
    },
    {
      "type": "header",
      "content": "Map"
    },
    {
      "type": "checkbox",
      "id": "show_map",
      "label": "Show Map",
      "default": true
    },
    {
      "type": "text",
      "id": "map_latitude",
      "label": "Map Latitude",
      "default": "40.7128"
    },
    {
      "type": "text",
      "id": "map_longitude",
      "label": "Map Longitude",
      "default": "-74.0060"
    },
    {
      "type": "range",
      "id": "map_zoom",
      "label": "Map Zoom Level",
      "min": 10,
      "max": 18,
      "step": 1,
      "default": 14
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Contact Form"
    }
  ]
}
{% endschema %}
