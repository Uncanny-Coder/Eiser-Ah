{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="contact-section {{ section.settings.color_scheme }}">
  <div class="container">
    <div class="page-header">
      <div class="left">
        <h2>{{ section.settings.contact_title }}</h2>
        <p>{{ section.settings.contact_subtitle }}</p>
      </div>
      <div class="right"><a href="/" class="breadcrumb">Home</a> / <span>Contact Us</span></div>
    </div>

    {% if section.settings.show_map %}
      <div class="map-wrapper">
        <div id="map"></div>
      </div>
      <script>
        function initMap() {
          const mapCenter = {
            lat: parseFloat({{ section.settings.map_latitude | default: 31.197 }}),
            lng: parseFloat({{ section.settings.map_longitude | default: 150.744 }})
          };

          const grayStyles = [
            {
              featureType: "all",
              stylers: [
                { saturation: -90 },
                { lightness: 50 }
              ]
            },
            { elementType: 'labels.text.fill', stylers: [{ color: '#A3A3A3' }] }
          ];

          const map = new google.maps.Map(document.getElementById('map'), {
            center: mapCenter,
            zoom: parseInt({{ section.settings.map_zoom | default: 9 }}),
            styles: grayStyles,
            scrollwheel: false
          });
        }
      </script>
      <script
        src="https://maps.googleapis.com/maps/api/js?key={{ section.settings.map_api_key }}&callback=initMap"
        async
        defer
      ></script>
    {% endif %}

    <div class="form-info-wrapper">
      <div class="contact-form-container">
        {% form 'contact', id: 'contact_form', class: 'contact_form' %}
          <div class="form-group">
            <textarea
              class="form-control"
              name="contact[body]"
              rows="7"
              placeholder="Enter Message"
            >{{ form.body }}</textarea>
          </div>
          <div class="form-row">
            <input
              class="form-control"
              name="contact[name]"
              type="text"
              placeholder="Enter your name"
              value="{{ form.name }}"
            >
            <input
              class="form-control"
              name="contact[email]"
              type="email"
              placeholder="Enter email address"
              value="{{ form.email }}"
            >
          </div>
          <div class="form-group">
            <input
              class="form-control"
              name="contact[subject]"
              type="text"
              placeholder="Enter Subject"
              value="{{ form.subject }}"
            >
          </div>
          <button type="submit" class="main_btn green-button">{{ section.settings.button_text }}</button>
        {% endform %}
      </div>

      <div class="contact-info-container">
        {% for block in section.blocks %}
          <div class="contact-info-block">
            <i class="{{ block.settings.icon_class }}"></i>
            <div>
              {% if block.settings.link %}
                <h4>
                  <a href="{{ block.settings.link }}">{{ block.settings.heading }}</a>
                </h4>
              {% else %}
                <h4>{{ block.settings.heading }}</h4>
              {% endif %}
              <p>{{ block.settings.text }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Styled Contact Form",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "contact_title",
      "label": "Contact Heading",
      "default": "Get in Touch"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Submit Button Text",
      "default": "Send Message"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "background-1"
    },
    {
      "type": "checkbox",
      "id": "show_map",
      "label": "Show Google Map",
      "default": true
    },
    {
      "type": "text",
      "id": "map_api_key",
      "label": "Google Maps API Key"
    },
    {
      "type": "text",
      "id": "map_latitude",
      "label": "Map Latitude",
      "default": "-31.197"
    },
    {
      "type": "text",
      "id": "map_longitude",
      "label": "Map Longitude",
      "default": "150.744"
    },
    {
      "type": "range",
      "id": "map_zoom",
      "label": "Map Zoom Level",
      "min": 1,
      "max": 20,
      "default": 9
    }
  ],
  "blocks": [
    {
      "type": "contact_info",
      "name": "Contact Info",
      "settings": [
        {
          "type": "text",
          "id": "icon_class",
          "label": "Icon Class",
          "default": "ti-home"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Buttonwood, California"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Rosemead, CA 91770"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Styled Contact Form",
      "blocks": [
        {
          "type": "contact_info"
        },
        {
          "type": "contact_info"
        },
        {
          "type": "contact_info"
        }
      ]
    }
  ]
}
{% endschema %}
