{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="section_gap contact-form-custom {{ section.settings.color_scheme }}">
  <div class="container">
    {% if section.settings.show_map %}
      <div class="d-none d-sm-block mb-5 pb-4">
        <div id="map" style="height: 480px;"></div>
        <script>
          function initMap() {
            const mapCenter = {
              lat: parseFloat({{ section.settings.map_latitude | default: 31.197 }}),
              lng: parseFloat({{ section.settings.map_longitude | default: 150.744 }})
            };

            const grayStyles = [
              {
                featureType: "all",
                stylers: [
                  { saturation: -90 },
                  { lightness: 50 }
                ]
              },
              { elementType: 'labels.text.fill', stylers: [{ color: '#A3A3A3' }] }
            ];

            const map = new google.maps.Map(document.getElementById('map'), {
              center: mapCenter,
              zoom: parseInt({{ section.settings.map_zoom | default: 9 }}),
              styles: grayStyles,
              scrollwheel: false
            });
          }
        </script>
        <script
          src="https://maps.googleapis.com/maps/api/js?key={{ section.settings.map_api_key }}&callback=initMap"
          async
          defer
        ></script>
      </div>
    {% endif %}

    <div class="row">
      <div class="col-12">
        <h2 class="contact-title">{{ section.settings.contact_title }}</h2>
      </div>

      <div class="col-lg-8 mb-4 mb-lg-0">
        {% form 'contact', id: 'contact_form', class: 'contact_form' %}
          <div class="row">
            <div class="col-12">
              <div class="form-group">
                <textarea
                  class="form-control w-100"
                  name="contact[body]"
                  rows="9"
                  placeholder="Enter Message"
                >{{ form.body }}</textarea>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <input
                  class="form-control"
                  name="contact[name]"
                  type="text"
                  placeholder="Enter your name"
                  value="{{ form.name }}"
                >
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <input
                  class="form-control"
                  name="contact[email]"
                  type="email"
                  placeholder="Enter email address"
                  value="{{ form.email }}"
                >
              </div>
            </div>
            <div class="col-12">
              <div class="form-group">
                <input
                  class="form-control"
                  name="contact[subject]"
                  type="text"
                  placeholder="Enter Subject"
                  value="{{ form.subject }}"
                >
              </div>
            </div>
          </div>
          <div class="form-group mt-lg-3">
            <button type="submit" class="main_btn">{{ section.settings.button_text }}</button>
          </div>
        {% endform %}
      </div>

      <div class="col-lg-4">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'contact_info' %}
              <div class="media contact-info">
                <span class="contact-info__icon"><i class="{{ block.settings.icon_class }}"></i></span>
                <div class="media-body">
                  {% if block.settings.link %}
                    <h3>
                      <a href="{{ block.settings.link }}">{{ block.settings.heading }}</a>
                    </h3>
                  {% else %}
                    <h3>{{ block.settings.heading }}</h3>
                  {% endif %}
                  <p>{{ block.settings.text }}</p>
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Contact Form",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Contact Us",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "H2" },
        { "value": "h1", "label": "H1" },
        { "value": "h0", "label": "H0" },
        { "value": "hxl", "label": "HXL" },
        { "value": "hxxl", "label": "HXXL" }
      ],
      "default": "h1",
      "label": "Heading Size"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Contact Info"
    },
    {
      "type": "text",
      "id": "address_heading",
      "label": "Address Heading",
      "default": "Address"
    },
    {
      "type": "textarea",
      "id": "address_text",
      "label": "Address Text",
      "default": "123 Main St, Anytown, USA"
    },
    {
      "type": "text",
      "id": "phone_number",
      "label": "Phone Number",
      "default": "+1 (123) 456-7890"
    },
    {
      "type": "text",
      "id": "phone_availability",
      "label": "Phone Availability",
      "default": "Mon–Fri, 9am–5pm"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "support@example.com"
    },
    {
      "type": "text",
      "id": "email_note",
      "label": "Email Note",
      "default": "We usually reply within 24 hours."
    },
    {
      "type": "header",
      "content": "Map"
    },
    {
      "type": "checkbox",
      "id": "show_map",
      "label": "Show Map",
      "default": true
    },
    {
      "type": "text",
      "id": "map_latitude",
      "label": "Map Latitude",
      "default": "40.7128"
    },
    {
      "type": "text",
      "id": "map_longitude",
      "label": "Map Longitude",
      "default": "-74.0060"
    },
    {
      "type": "range",
      "id": "map_zoom",
      "label": "Map Zoom Level",
      "min": 10,
      "max": 18,
      "step": 1,
      "default": 14
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Contact Form"
    }
  ]
}
{% endschema %}
